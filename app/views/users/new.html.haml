%header.center
  %h1.header New User Registration
= form_for @user, html: {class: 'form-horiontal'} do |f|
  .form-group.col-lg-12
    = f.label :email, class: 'col-lg-4'
    = f.email_field :email, class: 'col-lg-3'
  .form-group.col-lg-12
    = f.label :password, class: 'col-lg-4'
    = f.password_field :password, class: 'col-lg-3'
  .form-group.col-lg-12
    = f.label :password_confirmation, class: 'col-lg-4'
    = f.password_field :password_confirmation, class: 'col-lg-3'
  .form-group.col-lg-12
    = f.label :first_name, class: 'col-lg-4'
    = f.text_field :first_name, class: 'col-lg-3'
  .form-group.col-lg-12
    = f.label :last_name, class: 'col-lg-4'
    = f.text_field :last_name, class: 'col-lg-3'
  .form-group.col-lg-12.action.center
    = f.submit 'Register', class: 'btn btn-primary'
